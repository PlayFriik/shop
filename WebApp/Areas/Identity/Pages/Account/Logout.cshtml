@page
@model LogoutModel
@{
    ViewData["Title"] = @Base.Resources.WebApp.Areas.Identity.Pages.Account.Logout.LogOut;
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@Base.Resources.WebApp.Areas.Identity.Pages.Account.Logout.ClickHereToLogOut</button>
            </form>
        }
        else
        {
            <p>@Base.Resources.WebApp.Areas.Identity.Pages.Account.Logout.SuccessfullyLoggedOut</p>
        }
    }
</header>