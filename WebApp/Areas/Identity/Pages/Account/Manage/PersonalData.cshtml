@page
@model PersonalDataModel
@{
    ViewData["Title"] = @Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.PersonalData.PersonalDataTitle;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.PersonalData.YourAccountContainsPersonalData</p>
        <p>
            <strong>@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.PersonalData.DeletingThisData</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.PersonalData.Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.PersonalData.Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
