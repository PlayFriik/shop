@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = @Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.Generate2FARecoveryCodes;
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.PutTheseCodesInSafePlace</strong>
    </p>
    <p>
        @Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.IfYouLoseYourDeviceAndRecoveryCodes
    </p>
    <p>
        @Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.GeneratingNewRecoveryCodes<a asp-page="./ResetAuthenticator">@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.ResetYourAuthenticatorKeys</a>
    </p>
</div>
<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@Base.Resources.WebApp.Areas.Identity.Pages.Account.Manage.GenerateRecoveryCodes.GenerateRecoveryKeys</button>
    </form>
</div>