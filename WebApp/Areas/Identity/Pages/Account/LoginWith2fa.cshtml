@page
@model LoginWith2faModel
@{
    ViewData["Title"] = @Base.Resources.WebApp.Areas.Identity.Pages.Account.LoginWith2fa.TwoFactorAuthentication;
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>@Base.Resources.WebApp.Areas.Identity.Pages.Account.LoginWith2fa.LoginIsProtected</p>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.AuthenticatorCode"></label>
                <input asp-for="Input.AuthenticatorCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.AuthenticatorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberThisMachine">
                        <input asp-for="Input.RememberThisMachine" />
                        @Html.DisplayNameFor(m => m.Input.RememberThisMachine)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Base.Resources.WebApp.Areas.Identity.Pages.Account.LoginWith2fa.LogIn</button>
            </div>
        </form>
    </div>
</div>
<p>
    @Base.Resources.WebApp.Areas.Identity.Pages.Account.LoginWith2fa.DontHaveAccessToYourAuthenticatorDevice
    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">@Base.Resources.WebApp.Areas.Identity.Pages.Account.LoginWith2fa.LogInWithRecoveryCode</a>.
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
