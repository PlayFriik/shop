@model WebApp.BLL.DTO.Picture

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Pictures.Delete.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Pictures.Delete.Title</h1>

<h3>@WebApp.Resources.WebApp.Views.Pictures.Delete.AreYouSure</h3>
<div>
    <h4>@WebApp.Resources.WebApp.Views.Pictures.Delete.Picture</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Pictures.Delete.Product
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Pictures.Delete.Path
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Path)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebApp.Resources.WebApp.Views.Pictures.Delete.Title" class="btn btn-danger" /> |
        <a asp-area="" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId">@WebApp.Resources.WebApp.Views.Pictures.Delete.Cancel</a>
    </form>
</div>
