@model WebApp.Models.Orders.Create

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Orders.Create.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Orders.Create.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Orders.Create.Order</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.AppUser</label>
                <select asp-for="AppUserId" class="form-control" asp-items="Model.AppUsers"></select>
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.Location</label>
                <select asp-for="LocationId" class="form-control" asp-items="Model.Locations"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.Status</label>
                <select asp-for="StatusId" class="form-control" asp-items="Model.Statuses"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.DateTime</label>
                <input asp-for="DateTime" class="form-control"/>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.Total</label>
                <input asp-for="Total" class="form-control"/>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tracking" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Create.Tracking</label>
                <input asp-for="Tracking" class="form-control"/>
                <span asp-validation-for="Tracking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.Orders.Create.Title" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Orders.Create.BackToList</a>
</div>
