@model WebApp.Models.Orders.Edit

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Orders.Edit.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Orders.Edit.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Orders.Edit.Order</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @if (User.IsInRole("Admin"))
            {
                <input type="hidden" asp-for="Id"/>

                <div class="form-group">
                    <label asp-for="AppUserId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.AppUser</label>
                    <select asp-for="AppUserId" class="form-control" asp-items="Model.AppUsers"></select>
                    <span asp-validation-for="AppUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Location</label>
                    <select asp-for="LocationId" class="form-control" asp-items="Model.Locations"></select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Status</label>
                    <select asp-for="StatusId" class="form-control" asp-items="Model.Statuses"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.DateTime</label>
                    <input asp-for="DateTime" class="form-control"/>
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Total</label>
                    <input asp-for="Total" class="form-control"/>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tracking" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Tracking</label>
                    <input asp-for="Tracking" class="form-control"/>
                    <span asp-validation-for="Tracking" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@WebApp.Resources.WebApp.Views.Orders.Edit.Save" class="btn btn-primary"/>
                </div>
            }
            else if (User.IsInRole("Seller"))
            {
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="AppUserId"/>
                <input type="hidden" asp-for="LocationId"/>
                <input type="hidden" asp-for="DateTime"/>
                <input type="hidden" asp-for="Total"/>
                
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Status</label>
                    <select asp-for="StatusId" class="form-control" asp-items="Model.Statuses"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tracking" class="control-label">@WebApp.Resources.WebApp.Views.Orders.Edit.Tracking</label>
                    <input asp-for="Tracking" class="form-control"/>
                    <span asp-validation-for="Tracking" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@WebApp.Resources.WebApp.Views.Orders.Edit.Save" class="btn btn-primary"/>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Orders.Edit.BackToList</a>
</div>
