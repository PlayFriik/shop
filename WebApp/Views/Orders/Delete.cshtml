@model WebApp.BLL.DTO.Order

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Orders.Delete.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Orders.Delete.Title</h1>

<h3>@WebApp.Resources.WebApp.Views.Orders.Delete.AreYouSure</h3>
<div>
    <h4>@WebApp.Resources.WebApp.Views.Orders.Delete.Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.AppUser
        </dt>
        <dd class = "col-sm-10">
            @Model.AppUserId
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.Location
        </dt>
        <dd class = "col-sm-10">
            @Model.Location!.Name
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.Status
        </dt>
        <dd class = "col-sm-10">
            @Model.Status!.Name
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.DateTime
        </dt>
        <dd class = "col-sm-10">
            @Model.DateTime
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.Total
        </dt>
        <dd class = "col-sm-10">
            @Model.Total.ToString("0.00")
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Orders.Delete.Tracking
        </dt>
        <dd class = "col-sm-10">
            @Model.Tracking
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebApp.Resources.WebApp.Views.Orders.Delete.Title" class="btn btn-danger" /> |
        <a asp-action="Index">@WebApp.Resources.WebApp.Views.Orders.Delete.BackToList</a>
    </form>
</div>
