@model WebApp.BLL.DTO.OrderProduct

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.OrderProducts.Details.Title;
}

<h1>@WebApp.Resources.WebApp.Views.OrderProducts.Details.Title</h1>

<div>
    <h4>@WebApp.Resources.WebApp.Views.OrderProducts.Details.OrderProduct</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Details.Order
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order!.Id)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Details.Product
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Details.Quantity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@WebApp.Resources.WebApp.Views.OrderProducts.Details.Edit</a> |
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.OrderProducts.Details.BackToList</a>
</div>
