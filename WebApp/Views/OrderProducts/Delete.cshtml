@model WebApp.BLL.DTO.OrderProduct

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.OrderProducts.Delete.Title;
}

<h1>@WebApp.Resources.WebApp.Views.OrderProducts.Delete.Title</h1>

<h3>@WebApp.Resources.WebApp.Views.OrderProducts.Delete.AreYouSure</h3>
<div>
    <h4>@WebApp.Resources.WebApp.Views.OrderProducts.Delete.OrderProduct</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Delete.Order
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order!.Id)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Delete.Product
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.OrderProducts.Delete.Quantity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebApp.Resources.WebApp.Views.OrderProducts.Delete.Title" class="btn btn-danger" /> |
        <a asp-action="Index">@WebApp.Resources.WebApp.Views.OrderProducts.Delete.BackToList</a>
    </form>
</div>
