@model WebApp.Models.OrderProducts.Create

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.OrderProducts.Create.Title;
}

<h1>@WebApp.Resources.WebApp.Views.OrderProducts.Create.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.OrderProducts.Create.OrderProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">@WebApp.Resources.WebApp.Views.OrderProducts.Create.Order</label>
                <select asp-for="OrderId" class ="form-control" asp-items="Model.Orders"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">@WebApp.Resources.WebApp.Views.OrderProducts.Create.Product</label>
                <select asp-for="ProductId" class ="form-control" asp-items="Model.Products"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">@WebApp.Resources.WebApp.Views.OrderProducts.Create.Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.OrderProducts.Create.Title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.OrderProducts.Create.BackToList</a>
</div>
