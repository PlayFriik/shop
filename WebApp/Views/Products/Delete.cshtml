@model WebApp.BLL.DTO.Product

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Products.Delete.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Products.Delete.Title</h1>

<h3>@WebApp.Resources.WebApp.Views.Products.Delete.AreYouSure</h3>
<div>
    <h4>@WebApp.Resources.WebApp.Views.Products.Delete.Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Category
        </dt>
        <dd class = "col-sm-10">
            @Model.Category!.Name
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price.ToString("0.00")
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Quantity
        </dt>
        <dd class = "col-sm-10">
            @Model.Quantity
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Products.Delete.Sold
        </dt>
        <dd class = "col-sm-10">
            @Model.Sold
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebApp.Resources.WebApp.Views.Products.Delete.Title" class="btn btn-danger" /> |
        <a asp-action="Index">@WebApp.Resources.WebApp.Views.Products.Delete.BackToList</a>
    </form>
</div>
