@model WebApp.Models.Products.Create

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Products.Create.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Products.Create.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Products.Create.Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Category</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="Model.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sold" class="control-label">@WebApp.Resources.WebApp.Views.Products.Create.Sold</label>
                <input asp-for="Sold" class="form-control" />
                <span asp-validation-for="Sold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.Products.Create.Title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Products.Create.BackToList</a>
</div>
