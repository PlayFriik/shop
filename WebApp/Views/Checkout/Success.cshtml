@model WebApp.Models.Checkout.Success

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Checkout.Success.Payment;
}

<section class="banner gradient pb-4 pt-4">
    <div class="container">
        <div class="row text-center">
            <h3 class="fw-light m-auto">@WebApp.Resources.WebApp.Views.Checkout.Success.Payment.ToUpper()</h3>
        </div>
    </div>
</section>
<br/>

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto mt-5">
            <div class="content text-center">
                <h3>@WebApp.Resources.WebApp.Views.Checkout.Success.PaymentWasSuccessful</h3>
                <h5>@WebApp.Resources.WebApp.Views.Checkout.Success.YourOrderHasBeenPlaced</h5>
                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-dark mt-4" id="view-order">@WebApp.Resources.WebApp.Views.Checkout.Success.ViewOrder</a>
            </div>
        </div>
    </div>
</div>
