@model WebApp.BLL.DTO.Transaction

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Transactions.Details.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Transactions.Details.Title</h1>

<div>
    <h4>@WebApp.Resources.WebApp.Views.Transactions.Details.Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Transactions.Details.Order
        </dt>
        <dd class = "col-sm-10">
            @Model.Order!.Id
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Transactions.Details.Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.Amount.ToString("0.00")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@WebApp.Resources.WebApp.Views.Transactions.Details.Edit</a> |
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Transactions.Details.BackToList</a>
</div>
