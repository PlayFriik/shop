@model WebApp.BLL.DTO.Transaction

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Transactions.Delete.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Transactions.Delete.Title</h1>

<h3>@WebApp.Resources.WebApp.Views.Transactions.Delete.AreYouSure</h3>
<div>
    <h4>@WebApp.Resources.WebApp.Views.Transactions.Delete.Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Transactions.Delete.Order
        </dt>
        <dd class = "col-sm-10">
            @Model.Order!.Id
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Transactions.Delete.Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.Amount.ToString("0.00")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebApp.Resources.WebApp.Views.Transactions.Delete.Title" class="btn btn-danger" /> |
        <a asp-action="Index">@WebApp.Resources.WebApp.Views.Transactions.Delete.BackToList</a>
    </form>
</div>
