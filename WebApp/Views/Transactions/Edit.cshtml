@model WebApp.Models.Transactions.Edit

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Transactions.Edit.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Transactions.Edit.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Transactions.Edit.Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">@WebApp.Resources.WebApp.Views.Transactions.Edit.Order</label>
                <select asp-for="OrderId" class="form-control" asp-items="Model.Orders"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">@WebApp.Resources.WebApp.Views.Transactions.Edit.Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.Transactions.Edit.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Transactions.Edit.BackToList</a>
</div>
