@model IEnumerable<WebApp.BLL.DTO.Transaction>

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Transactions.Index.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Transactions.Index.Title</h1>

<p>
    <a asp-action="Create">@WebApp.Resources.WebApp.Views.Transactions.Index.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @WebApp.Resources.WebApp.Views.Transactions.Index.Order
            </th>
            <th>
                @WebApp.Resources.WebApp.Views.Transactions.Index.Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var transaction in Model) {
        <tr>
            <td>
                @transaction.Order!.Id
            </td>
            <td>
                @transaction.Amount.ToString("0.00")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@transaction.Id">@WebApp.Resources.WebApp.Views.Transactions.Index.Edit</a> |
                <a asp-action="Details" asp-route-id="@transaction.Id">@WebApp.Resources.WebApp.Views.Transactions.Index.Details</a> |
                <a asp-action="Delete" asp-route-id="@transaction.Id">@WebApp.Resources.WebApp.Views.Transactions.Index.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
