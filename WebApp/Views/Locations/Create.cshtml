@model WebApp.Models.Locations.Create

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Locations.Create.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Locations.Create.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Locations.Create.Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Create.Provider</label>
                <select asp-for="ProviderId" class ="form-control" asp-items="Model.Providers"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Create.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Create.Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.Locations.Create.Title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Locations.Create.BackToList</a>
</div>
