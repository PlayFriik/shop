@model WebApp.Models.Locations.Edit

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Locations.Edit.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Locations.Edit.Title</h1>

<h4>@WebApp.Resources.WebApp.Views.Locations.Edit.Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="NameId" />
            <input type="hidden" asp-for="AddressId" />
            
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Edit.Provider</label>
                <select asp-for="ProviderId" class="form-control" asp-items="Model.Providers"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Edit.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">@WebApp.Resources.WebApp.Views.Locations.Edit.Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@WebApp.Resources.WebApp.Views.Locations.Edit.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Locations.Edit.BackToList</a>
</div>
