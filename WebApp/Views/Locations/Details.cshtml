@model WebApp.BLL.DTO.Location

@{
    ViewData["Title"] = WebApp.Resources.WebApp.Views.Locations.Details.Title;
}

<h1>@WebApp.Resources.WebApp.Views.Locations.Details.Title</h1>

<div>
    <h4>@WebApp.Resources.WebApp.Views.Locations.Details.Location</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Locations.Details.Provider
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provider!.Name)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Locations.Details.Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @WebApp.Resources.WebApp.Views.Locations.Details.Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@WebApp.Resources.WebApp.Views.Locations.Details.Edit</a> |
    <a asp-action="Index">@WebApp.Resources.WebApp.Views.Locations.Details.BackToList</a>
</div>
